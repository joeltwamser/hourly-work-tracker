<Window x:Class="hourlyWorkTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hourlyWorkTracker"
        mc:Ignorable="d"
        Title="Hourly Wage Ticker" WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True" Height="450" Width="800">
    <Window.Resources>
        <RadialGradientBrush x:Key="backgroundBrush" Center="0.35, 0.6" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#707070" Offset="0.05"/>
            <GradientStop Color="#4a4a4a" Offset="0.3"/>
            <GradientStop Color="#2e2e2e"  Offset="0.6"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
        <SolidColorBrush x:Key="moneyColor" Color="#118C4F"/>
    </Window.Resources>
    <Border Name="mainWindowBorder" BorderBrush="{StaticResource moneyColor}" BorderThickness="3">
        <Canvas Name="mainWindowCanvas" Background="{StaticResource backgroundBrush}">
        </Canvas>
    </Border>
</Window>
