<Application x:Class="hourlyWorkTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:hourlyWorkTracker"
             xmlns:view="clr-namespace:hourlyWorkTracker.Views"
             xmlns:vm="clr-namespace:hourlyWorkTracker.ViewModels"
             xmlns:converter="clr-namespace:hourlyWorkTracker.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converter:ColorToBrushConverter x:Key="CTBC"/>
        <DataTemplate DataType="{x:Type vm:TrackerWindowViewModel}">
            <view:TrackerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ConfigureWindowViewModel}">
            <view:ConfigureView/>
        </DataTemplate>
    </Application.Resources>
</Application>
