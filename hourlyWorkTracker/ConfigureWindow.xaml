<Window x:Class="hourlyWorkTracker.ConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hourlyWorkTracker"
        mc:Ignorable="d" Title="ConfigureWindow" Height="500" Width="500" MinWidth="250">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <Button Name="CloseWindowButton" Margin="4" Height="30" Width="250" HorizontalAlignment="Right" Click="closeConfigureWindow">Close</Button>
        </DockPanel>
        <TabControl Name="DynamicTabControl" DockPanel.Dock="Top">
            <TabItem Header="UI Layout">
                <Label Content="Various UI Options Go Here..." />
            </TabItem>
            <TabItem Header="Opacity">
                <Slider Name="OpacitySlider" Margin="10" Minimum="10" Maximum="100" ValueChanged="updateMainWindowOpacity"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
